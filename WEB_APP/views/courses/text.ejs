                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Settings
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="row dashboard">
                    <h1 class="h2 col-md-9 ">
                        <%=section.document.name%>/<%=section.name%>
                    </h1>

                    <a class="btn btn-primary col-md-3" href="/api/courses/document/<%=section.document._id%>">back</a>
                </div>
                <hr>


                <div class="card text-center">

                    <div class="card-body">
                        <h4 class="card-title">
                            <%=section.name%>
                        </h4>
                        <p class="card-text">
                            <%=section.content%>
                        </p>
                    </div>
                </div>
            </main>
        </div>
    </div>


